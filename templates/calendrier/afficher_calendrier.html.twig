{# templates/calendrier/afficher_calendrier.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	{# {{ encore_entry_link_tags('calendrier') }} #}
	<link rel="stylesheet" href="{{ asset('assets/styles/app.css') }}">
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('calendrier') }}

{% endblock %}

{% block body %}

	<div id="calendrier" data-calendrier="{{ evenementsJSON }}" class="calendrier">
		<!-- test -->
	</div>

	<div id="modal" class="modal">
        <div class="modal-content">
			<div class="form-group">
				<label for="prenom">Prénom:</label>
				<input type="text" id="prenom" class="form-control" required>
			</div>

			<div class="form-group">
				<label for="nom">Nom:</label>
				<input type="text" id="nom" class="form-control" required>
			</div>

			<div class="form-group">
				<label for="numero">Numéro de téléphone:</label>
				<input type="tel" id="numero" class="form-control" required>
			</div>
			<div class="form-group">
				<label for="email">Email:</label>
				<input type="email" id="email" class="form-control" required>
			</div>
			<div class="form-group">
				<label for="adresse">Adresse:</label>
				<input type="adresse" id="adresse" class="form-control" required>
			</div>
			<button type="submit" class="btn btn-primary" onclick="validerFormulaire()">Valider</button>
        </div>
    </div>

{% endblock %}
